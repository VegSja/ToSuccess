<resources>
    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/surfaceColor</item>
        <item name="colorPrimaryDark">@color/MainBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
<!--        <item name="android:timePickerDialogTheme">@style/timePickerStyle</item>-->
    </style>

    <style name="DarkTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/surfaceColor</item>
        <item name="colorPrimaryDark">@color/MainBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="animation">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_dismiss</item>
    </style>

    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/ic_toggle_bg</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="toggleButton"  parent="Theme.MaterialComponents.DayNight">
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>

